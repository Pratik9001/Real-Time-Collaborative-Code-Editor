# Production Environment Configuration
# Update these values for your deployment

# Domain Configuration
DOMAIN=localhost
CLIENT_URL=https://localhost
API_URL=https://localhost/api
WS_URL=https://localhost

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=collaborative_editor_user
DB_PASSWORD=ChangeThisSecurePassword123!
DB_NAME=collaborative_editor
DB_SSL=false

# Redis Configuration
REDIS_PASSWORD=ChangeThisRedisPassword456!

# JWT Configuration (IMPORTANT: Generate secure random strings)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem